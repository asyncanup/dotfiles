[alias]
  s = status -s
  f = fetch
  fap = fetch --all --prune
  cl = clone --recursive
  d = diff
  db = !git diff $1..HEAD
  dc = diff --cached
  di = diff --no-index
  ds = diff --stat
  dm = diff main..HEAD
  dms = diff main..HEAD --stat
  dmm = !git diff $(git merge-base main HEAD)..HEAD
  sh = show
  cfs = diff --name-only --diff-filter=U
  cfd = clean -f -d
  co = checkout
  com = checkout main
  cob = checkout -b
  a = add
  ap = add -p
  st = stash push -u -m ; -m requires a name for the stash
  stl = stash list
  stp = stash pop
  sts = stash show -p
  stss = stash show -p --stat
  std = stash drop
  stdi = !git stash drop stash@{$1}
  stc = stash clear
  apl = apply
  c = commit --verbose
  cm = commit -m
  cam = commit -a -m
  ca = commit --verbose -a
  cc = commit --verbose --amend
  ccr = commit --verbose --amend --reset-author
  cu = config user.name
  ce = config user.email
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpq = cherry-pick --quit
  cpa = cherry-pick --abort
  p = push
  pt = push --tags
  pf = push --force
  pdo = push -d origin
  t = tag -a
  td = tag -d
  tdo = push --delete origin
  b = branch
  ba = branch -a
  bd = branch --delete
  bD = branch -D
  bu = branch -u ; set upstream
  bmm = branch -a --merged main
  bnm = branch -a --no-merged main
  l = log --pretty=format:\"%Cgreen%ad %Creset%s%Cgreen%d %Cblue- %an %Cgreen%h\" --graph --date=short
  lp = log -p
  hist = !git log $(git merge-base main HEAD)..HEAD --pretty=format:"%B"
  r = reset
  rs = reset --soft
  rh = reset --hard
  rsh = reset --soft HEAD^
  rhh = reset --hard HEAD
  rp = reset -p
  re = remote
  rea = remote add
  reg = remote get-url
  res = remote set-url
  rev = rev-parse
  cat = cat-file -p
  pl = pull --rebase
  plm = pull --rebase origin main
  type = cat-file -t
  m = merge --no-ff
  mf = merge --ff
  rb = rebase
  rbi = rebase -i
  rbim = rebase -i main
  rbm = rebase main
  rba = rebase --abort
  rbc = rebase --continue
  rbs = rebase --skip
  bs = bisect
  bss = bisect start
  bsg = bisect good
  bsb = bisect bad
  bsr = bisect reset
  sm = submodule
  h = help

[advice]
  detachedHead = false

[branch]
  autosetupmerge = always
  autosetuprebase = always

[commit]
  verbose = true

[status]
  submoduleSummary = true

[core]
  excludesfile = ~/.gitignore

[diff]
  colorMoved = default
  submodule = log

[delta]
  line-numbers = true
  side-by-side = true
  navigate = true
  syntax-theme = Monokai
  plus-style = syntax "#003800"
  minus-style = syntax "#3f0001"

[push]
  default = current
  followTags = true

[merge]
  renamelimit = 3000

[rerere]
  enabled = true

[include]
  path = ~/.gitconfig.local

[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
