[alias]
  s = status -s
  f = fetch
  fap = fetch --all --prune
  cl = clone --recursive
  d = diff
  db = !git diff $1..HEAD
  dc = diff --cached
  di = diff --no-index
  dm = diff master..HEAD
  dms = diff master..HEAD --stat
  dmm = !git diff $(git merge-base master HEAD)..HEAD
  sh = show
  cfs = diff --name-only --diff-filter=U
  co = checkout
  com = checkout master
  cob = checkout -b
  a = add
  ap = add -p
  st = stash push -u -m ; -m requires a name for the stash
  stl = stash list
  stp = stash pop
  sts = stash show -p
  stss = stash show -p --stat
  std = stash drop
  stdi = !git stash drop stash@{$1}
  stc = stash clear
  apl = apply
  c = commit --verbose
  cm = commit -m
  cam = commit -a -m
  ca = commit --verbose -a
  cc = commit --verbose --amend
  cu = config user.name
  ce = config user.email
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpq = cherry-pick --quit
  cpa = cherry-pick --abort
  p = push
  pt = push --tags
  pf = push --force
  pdo = push -d origin
  t = tag
  ta = tag -a
  td = tag -d
  tdo = push --delete origin
  b = branch
  ba = branch -a
  bd = branch --delete
  bD = branch -D
  bu = branch -u ; set upstream
  bmm = branch -a --merged master
  bnm = branch -a --no-merged master
  l = log --pretty=format:\"%Cgreen%ad %Creset%s%Cgreen%d %Cblue- %an %Cgreen%h\" --graph --date=short
  lp = log -p
  hist = !git log $(git merge-base master HEAD)..HEAD --pretty=format:"%B"
  r = reset
  rs = reset --soft
  rh = reset --hard
  rsh = reset --soft HEAD^
  rhh = reset --hard HEAD
  rp = reset -p
  re = remote
  rea = remote add
  reg = remote get-url
  res = remote set-url
  rev = rev-parse
  cat = cat-file -p
  pl = pull --rebase
  plm = pull --rebase origin master
  type = cat-file -t
  m = merge --no-ff
  mf = merge --ff
  rb = rebase
  rbi = rebase -i
  rbim = rebase -i master
  rbm = rebase master
  rba = rebase --abort
  rbc = rebase --continue
  rbs = rebase --skip
  bs = bisect
  bss = bisect start
  bsg = bisect good
  bsb = bisect bad
  bsr = bisect reset
  sm = submodule
  h = help

[include]
    path = .gitconfig.local

[branch]
    autosetupmerge = always
    autosetuprebase = always

[commit]
  verbose = true

[status]
  submoduleSummary = true

[core]
  excludesfile = ~/.gitignore
  pager = delta

[diff]
  colorMoved = default

[delta]
  line-numbers = true
  side-by-side = true
  navigate = true
  syntax-theme = Monokai
  plus-style = syntax "#003800"
  minus-style = syntax "#3f0001"

[interactive]
    diffFilter = delta --color-only

[push]
  default = current

[merge]
  renamelimit = 3000
