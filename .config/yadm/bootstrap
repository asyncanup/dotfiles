#!/bin/bash

sudo apt-get update
sudo apt-get -y upgrade

cd ~

alias apt='sudo apt-get --assume-yes install'

# basic useful tools
apt git wget curl lynx python3 python3-pip neovim python3-neovim exuberant-ctags xclip

# more useful but not so basic tools
apt inotify-tools fzf tldr

# get and install bat, ripgrep, fd
wget https://github.com/sharkdp/bat/releases/download/v0.12.1/bat-musl_0.12.1_amd64.deb
wget https://github.com/BurntSushi/ripgrep/releases/download/11.0.2/ripgrep_11.0.2_amd64.deb
wget https://github.com/sharkdp/fd/releases/download/v7.4.0/fd-musl_7.4.0_amd64.deb

apt ./bat-musl_0.12.1_amd64.deb ./ripgrep_11.0.2_amd64.deb ./fd-musl_7.4.0_amd64.deb
rm bat-musl_0.12.1_amd64.deb ./ripgrep_11.0.2_amd64.deb ./fd-musl_7.4.0_amd64.deb

# powerline shell
pip3 install powerline-shell
mkdir -p .local/share/nvim/session .vim/backup
nvim '+PlugUpdate' '+PlugClean!' '+PlugUpdate' '+qall'

# nvm
wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.2/install.sh | bash

# pyenv
apt make build-essential libssl-dev zlib1g-dev libbz2-dev \
    libreadline-dev libsqlite3-dev llvm libncurses5-dev libncursesw5-dev \
    xz-utils tk-dev libffi-dev liblzma-dev python-openssl
curl -L https://github.com/pyenv/pyenv-installer/raw/master/bin/pyenv-installer | bash

# go
wget https://dl.google.com/go/go1.13.8.linux-amd64.tar.gz
sudo tar -xvf go1.13.8.linux-amd64.tar.gz
rm go1.13.8.linux-amd64.tar.gz
sudo mv go /usr/local/

# install npm globally installed tools
cd bin && npm install && cd ~

# todo file
touch ~/.todo
