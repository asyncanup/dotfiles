// manifest.json
{
  "manifest_version": 2,
  "name": "BishFox",
  "version": "1.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bishfox.js"]
    }
  ]
}

